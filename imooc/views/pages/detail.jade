extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post", action="/admin/new")
                .form-group
                    label.col-sm-3.control-label(for="iputTitle") name
                    .col-sm-10
                        input#imputTitle.form-control(type="text", name="movie[title]", value="#{movie.title}")

                .form-group
                    label.col-sm-3.control-label(for="iputDoctor") doctor
                    .col-sm-10
                        input#imputTitle.form-control(type="text", name="movie[doctor]", value="#{movie.doctor}")
                .form-group
                    label.col-sm-3.control-label(for="iputCountry") country
                    .col-sm-10
                        input#imputTitle.form-control(type="text", name="movie[country]", value="#{movie.country}")
